@model ass2_BookReader.Models.Book
@{
    ViewBag.Title = Model.Title + " - Book Details";
}

<section class="book-detail-page">
    <h1>@Model.Title</h1>

    <div class="book-detail-container">
        <div class="book-detail-cover">
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <img src="~/Images/@Model.CoverImage" alt="@Model.Title">
            }
            else
            {
                <img src="https://via.placeholder.com/300x450?text=No+Cover" alt="No Cover">
            }
        </div>

        <div class="book-detail-info">
            <div class="book-meta">
                <span class="meta-item">
                    <strong>Author：</strong> @Model.Author
                </span>
                <span class="meta-item">
                    <strong>Classification：</strong> @Model.Category
                </span>
                <span class="meta-item">
                    <strong>Publication year：</strong> @Model.PublishYear
                </span>
                <span class="meta-item">
                    <strong>Price：</strong> <span class="price">¥@Model.Price.ToString("F2")</span>
                </span>
            </div>

            <h2>Content Introduction</h2>
            <div class="book-description">
                <p>@Model.Description</p>
            </div>

            <h2>Book Information</h2>
            <ul class="book-specs">
                <li><strong>ISBN：</strong> @Model.Isbn</li>
                <li><strong>Page count：</strong> @Model.PageCount Page</li>
                <li><strong>Language：</strong> @Model.Language</li>
            </ul>

            <div class="book-actions">
                <a href="@Url.Action("Read", "Books", new { id = Model.Id })" class="btn primary-btn">Start reading</a>
                <a href="@Url.Action("Index", "Books", new { searchTerm = ViewBag.SearchTerm, sortBy = ViewBag.SortBy })" class="btn secondary-btn">Return list</a>
            </div>
        </div>
    </div>
</section>
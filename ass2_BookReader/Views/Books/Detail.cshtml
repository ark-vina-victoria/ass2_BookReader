@model ass2_BookReader.Models.Book
@{
    ViewBag.Title = Model.Title + " - 图书详情";
}

<section class="book-detail-page">
    <h1>@Model.Title</h1>

    <div class="book-detail-container">
        <!-- 左侧封面 -->
        <div class="book-detail-cover">
            @if (!string.IsNullOrEmpty(Model.CoverImage))
            {
                <img src="~/Images/@Model.CoverImage" alt="@Model.Title">
            }
            else
            {
                <img src="https://via.placeholder.com/300x450?text=No+Cover" alt="No Cover">
            }
        </div>

        <!-- 右侧详情 -->
        <div class="book-detail-info">
            <div class="book-meta">
                <span class="meta-item">
                    <strong>作者：</strong> @Model.Author
                </span>
                <span class="meta-item">
                    <strong>分类：</strong> @Model.Category
                </span>
                <span class="meta-item">
                    <strong>出版年份：</strong> @Model.PublishYear
                </span>
                <span class="meta-item">
                    <strong>价格：</strong> <span class="price">¥@Model.Price.ToString("F2")</span>
                </span>
            </div>

            <h2>内容简介</h2>
            <div class="book-description">
                <p>@Model.Description</p>
            </div>

            <h2>图书信息</h2>
            <ul class="book-specs">
                <li><strong>ISBN：</strong> @Model.Isbn</li>
                <li><strong>页数：</strong> @Model.PageCount 页</li>
                <li><strong>语言：</strong> @Model.Language</li>
            </ul>

            <div class="book-actions">
                <a href="@Url.Action("Read", "Books", new { id = Model.Id })" class="btn primary-btn">开始阅读</a>
                <a href="@Url.Action("Index", "Books", new { searchTerm = ViewBag.SearchTerm, sortBy = ViewBag.SortBy })" class="btn secondary-btn">返回列表</a>
            </div>
        </div>
    </div>
</section>
@{
    ViewBag.Title = "Contact Us - Book Reader";
}

<section class="contact-page">
    <div class="container">
        <h1>Contact Us</h1>
        <div class="contact-container">
            <!-- Contact Information Area -->
            <div class="contact-info">
                <h2>Contact Information</h2>
                <ul class="contact-details">
                    <li>
                        <strong>Email:</strong>
                        <a href="mailto:support@bookreader.com">support@bookreader.com</a>
                    </li>
                    <li>
                        <strong>Phone:</strong>
                        <span>400-123-4567</span>
                    </li>
                    <li>
                        <strong>Address:</strong>
                        <span>Building 1, Zhongguancun Software Park, Haidian District, Beijing</span>
                    </li>
                    <li>
                        <strong>Business Hours:</strong>
                        <span>Monday to Friday 9:00 AM - 6:00 PM (excluding public holidays)</span>
                    </li>
                </ul>

                <h3>Follow Us</h3>
                <div class="social-links">
                    <a href="#" class="social-link">WeChat</a>
                    <a href="#" class="social-link">Weibo</a>
                    <a href="#" class="social-link">Zhihu</a>
                </div>
            </div>

            <!-- Contact Form Area (static demo, no actual submission functionality) -->
            <div class="contact-form">
                <h2>Send a Message</h2>
                <form id="contactForm">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" placeholder="Please enter your name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Please enter your email address" required>
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" id="subject" name="subject" placeholder="Please enter the message subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Message Content</label>
                        <textarea id="message" name="message" rows="5" placeholder="Please enter your questions or suggestions" required></textarea>
                    </div>
                    <button type="submit" class="btn primary-btn">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>
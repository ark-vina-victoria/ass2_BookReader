<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Book Reader - Online Book Reading and Showcase Platform">
    <meta name="keywords" content="books,reading,programming,science fiction,e-books">
    <title>@ViewBag.Title - Book Reader</title>

    <!-- Custom CSS (overrides MVC default styles, meets "custom external CSS" requirement) -->
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />

    <!-- W3C Validator Link (meets page requirements) -->
    <link rel="stylesheet" href="https://www.w3.org/Style/CSS/Validator">
</head>
<body>
    <!-- Navigation Bar -->
    <header>
        <nav class="site-nav">
            <div class="container">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">BookReader</a>
                </div>
                <ul class="nav-links">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Books")">Book List</a></li>
                    <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact Us</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <main class="container">
        @RenderBody() <!-- Render child page content -->
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-links">
                <a href="@Url.Action("About", "Home")">About Us</a>
                <a href="@Url.Action("Contact", "Home")">Contact Us</a>
                <a href="mailto:support@bookreader.com">Support Email</a> <!-- Fictional email link -->
            </div>
            <div class="validators">
                <!-- HTML5 and CSS3 Validator Links (meets requirements) -->
                <a href="https://validator.w3.org/" target="_blank">HTML5 Validator</a>
                <a href="https://jigsaw.w3.org/css-validator/" target="_blank">CSS3 Validator</a>
            </div>
            <div class="copyright">
                &copy; @DateTime.Now.Year BookReader. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Native JavaScript Scripts (split by functionality) -->
    <script src="~/js/search.js"></script>
    <script src="~/js/sort.js"></script>
    <script src="~/js/pagination.js"></script>
</body>
</html>